<%-include("paginaPrincipal")%>
<body>
    

    <div class="titulo2">
        <h2><%=msg%></h2>
    </div>

    <div class="contenedorPreguntas">
        <div class="contadorBoton">
            <div class="contador">
                <estilo1>
                    <%if(numPreguntas==1){ %>
                        <%=numPreguntas%> pregunta
                    <%}else{%>   
                        <%=numPreguntas%> preguntas
                    <%}%>
                </estilo1>
            </div>
            <div class="formularPregunta">
                <a href="/pregunta/formularPregunta">
                    <button class="formular" type="submit">Formular Pregunta</button>
                </a>
            </div>
        </div>

        <div class="preguntasUsuarios">
            <%qList.forEach(function(q){%>
            <div class="contenidoPregunta">
                <div class="contenido">
                    <div class=c>
                        <a href="/pregunta/infoPregunta/<%=q.idPregunta%>" class="estiloP"><%=q.titulo%></a>
                    </div>
                    <div class=c>
                        <estilo2><%=q.cuerpo.substring(0, 150)%></estilo2>
                        <%if(q.cuerpo.length>150){ %>
                            <estilo2>...</estilo2>
                        <%}%>
                    </div>
                    <%if(q.tags[0] != null){ %>
                    <div class="tags c">
                        <%q.tags.forEach(function(e){%>
                            <%if(e != "null"){ %>
                                <div class=tag><a href="/pregunta/preguntasEtiqueta/<%=e%>"><%=e%></a></div>
                            <%}%>
                        <%})%>
                    </div>
                    <%}%>
                </div>
                <div class="usuario">
                    <div class="fecha c">
                        <estilo2>Formulada el <%=q.fecha.toDateString()%></estilo2>
                    </div>
                    <div class="imagen c">
                        <img src="/usuario/imagenUsuario/<%=q.imagen%>">
                    </div>
                    <div class="nombre c">
                        <a href="/usuario/perfilUsuario/<%=q.idUsuario%>"><%=q.nombre%></a>
                    </div>
                </div>
                <div class="centrar">
                    <form method="POST" action="/pregunta/eliminarPregunta">
                        <input type="hidden" name="IdPregunta" value=<%=q.idPregunta%>>
                        <button class="eliminar" type="submit" alt="eliminar">X</button>
                    </form>
                        <a href="/pregunta/modificarPregunta/<%=q.idPregunta%>">
                            <button class="modificar" type="submit" alt="modificar">MOD</button>
                        </a>
                </div>
            </div>
            <%})%>
        </div>
    </div>

</body>

</html>